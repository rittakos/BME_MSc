+void
+BSBasis::normalize() {
+  size_t k = knots_.size();
+  double low = knots_.front(), high = knots_.back(), len = high - low;
+  for (size_t i = 0; i < k; ++i) {
+    knots_[i] = (knots_[i] - low) / len;
+  }
+}
