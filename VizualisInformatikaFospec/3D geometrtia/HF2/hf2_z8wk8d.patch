+BSCurve
+BSCurve::insertKnot(double u, size_t r) const {
+  size_t s;
+  size_t k = basis_.findSpanWithMultiplicity(u, s);
+  if (s >= basis_.degree())
+    return *this;
+  r = std::min(r, basis_.degree() - s);
+  return insertKnot(u, k, s, r);
+}
