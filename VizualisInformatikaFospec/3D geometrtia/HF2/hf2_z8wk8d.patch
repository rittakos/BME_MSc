+void
+BSBasis::reverse() {
+  size_t k = knots_.size();
+  DoubleVector new_knots;
+  new_knots.reserve(k);
+
+  double curr = knots_.front();
+  for (size_t i = 1, j = k - 1; i < k; ++i, --j) {
+    new_knots.push_back(curr);
+    curr += knots_[j] - knots_[j-1];
+  }
+  new_knots.push_back(curr);
+
+  knots_ = new_knots;
+}
